@model IEnumerable<MainProject.Models.BookChappter>

@{
    ViewData["Title"] = "Index";
    ViewData["H1"] = "Danh sách các chương sách hiện có";
    ViewData["Breadcrumb1"] = "Quản lý";
    ViewData["Breadcrumb2"] = "Danh mục chương sách";
    ViewData["Breadcrumb3"] = "Danh sách";
}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title pull-left">Danh mục chương sách</h3>
        <p>
            <a asp-action="Create" class="btn btn-success pull-right">Tạo mới</a>
        </p>
    </div>
    <div class="box-body">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slug)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryID.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slug)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.ID"><i class="fa fa-desktop"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>