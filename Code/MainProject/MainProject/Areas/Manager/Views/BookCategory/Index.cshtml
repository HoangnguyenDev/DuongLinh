@model IEnumerable<MainProject.Models.BookCategory>

@{
    ViewData["Title"] = "Index";
    ViewData["H1"] = "Danh sách các sách hiện có";
    ViewData["Breadcrumb1"] = "Quản lý";
    ViewData["Breadcrumb2"] = "Danh mục sách";
    ViewData["Breadcrumb3"] = "Danh sách";
}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title pull-left">Danh mục sách</h3>
        <p>
            <a asp-action="Create" class="btn btn-success pull-right">Tạo mới</a>
        </p>
    </div> 
    <div class="box-body">
        @if (!Model.Any())
        { 
            <label>Chưa có dữ liệu</label>
        }
        else
        { 
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryDes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slug)
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryDes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slug)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a> 
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@item.ID"><i class="fa fa-desktop"></i></a> 
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>
</div>